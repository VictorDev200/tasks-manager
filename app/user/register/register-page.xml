<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="TasksManager" />
    <StackLayout height="100%">
      <FlexboxLayout height="100%" flexDirection="column">
        <Label text="Username" />
        <TextField hint="Username" text="{{ username }}"/>
        <Label text="Password" />
        <TextField hint="Password" text="{{ password }}"/>
        <Label text="Password Verification"/>
        <TextField hint="Password Verification"  text="{{ passwordVerify }}"/>
        <Label text="{{ errorMessage }}" />
        <Button text="Register" tap="{{ onTapRegister }}" />
      </FlexboxLayout>
    </StackLayout>
  </Page>